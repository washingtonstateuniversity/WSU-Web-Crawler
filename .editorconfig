# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[Makefile]
indent_style = tab
indent_size = 4

[*.{js,php,css,md,xml,html}]
indent_style = tab
intent_size = 4

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
